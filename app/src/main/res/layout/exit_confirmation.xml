<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="10dp">

    <com.prts.pickcustomer.customviews.PickCCustomTextVIew
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:gravity="start"
        android:paddingLeft="5dp"
        android:text="@string/exit_confirmation"
        android:textAlignment="gravity"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:textStyle="bold" />

    <com.prts.pickcustomer.customviews.PickCCustomTextVIew
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:gravity="start"
        android:paddingLeft="5dp"
        android:text="@string/are_you_sure_you_want_to_exit"
        android:textAlignment="gravity"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        android:textStyle="normal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:background="@android:color/white"
        android:orientation="horizontal"
        android:padding="10dp">

        <com.prts.pickcustomer.customviews.PickCCustomTextVIew
            android:id="@+id/yesBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_weight="0.8"
            android:background="@drawable/alert_dialog_bg"
            android:gravity="center"
            android:padding="10dp"
            android:text="Yes"
            android:textAllCaps="false"
            android:textColor="@color/appThemeYellow"
            android:textSize="20sp" />

        <com.prts.pickcustomer.customviews.PickCCustomTextVIew
            android:id="@+id/noBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="0.8"
            android:background="@drawable/alert_dialog_bg"
            android:gravity="center"
            android:padding="10dp"
            android:text="No"
            android:textAllCaps="false"
            android:textColor="@color/appThemeYellow"
            android:textSize="20sp" />


    </LinearLayout>


</LinearLayout>