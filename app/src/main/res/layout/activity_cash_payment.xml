<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/broderline"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <com.prts.pickcustomer.customviews.PickCCustomTextVIew
                android:id="@+id/booking_num"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_10"
                android:background="@drawable/broderline"
                android:elevation="@dimen/elevation_10dp"
                android:gravity="center"
                android:padding="@dimen/padding_20"
                android:text="Booking Number"
                android:textColor="@color/appThemeYellow"
                android:textStyle="bold" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/amount_pays"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_10"
                android:background="@drawable/broderline"
                android:elevation="@dimen/elevation_10dp"
                android:gravity="center"
                android:padding="@dimen/padding_15"
                android:text="Amount"
                android:textColor="@color/appThemeYellow"
                android:textSize="@dimen/text_size_26"
                android:textStyle="bold" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.prts.pickcustomer.customviews.PickCCustomTextVIew
                    android:id="@+id/pay_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/margin_10"
                    android:layout_marginBottom="0.1dp"
                    android:layout_marginLeft="0.1dp"
                    android:layout_marginRight="0.1dp"
                    android:layout_marginTop="0.1dp"
                    android:background="@drawable/cashpaymentbutton"
                    android:elevation="@dimen/elevation_10dp"
                    android:gravity="center"
                    android:onClick="payNow"
                    android:padding="@dimen/padding_20"
                    android:text="@string/pay_now"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_18"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="@dimen/height_40"
                    android:layout_height="@dimen/height_40"
                    android:layout_alignBottom="@+id/pay_button"
                    android:layout_alignLeft="@+id/cash_button"
                    android:layout_alignStart="@+id/cash_button"
                    android:layout_alignTop="@+id/pay_button"
                    android:layout_marginLeft="@dimen/margin_30"
                    android:elevation="@dimen/elevation_10dp"
                    android:src="@drawable/cash_payments" />
            </RelativeLayout>
        </LinearLayout>


    </LinearLayout>

</LinearLayout>