<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:padding="@dimen/margin_10">

    <com.prts.pickcustomer.customviews.PickCCustomTextVIew
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/padding_5"
        android:gravity="start"
        android:paddingLeft="@dimen/padding_5"
        android:text="No internet connection"
        android:textAlignment="gravity"
        android:textColor="@android:color/black"
        android:textSize="@dimen/text_size_20"
        android:textStyle="bold" />

    <com.prts.pickcustomer.customviews.PickCCustomTextVIew
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/padding_5"
        android:gravity="start"
        android:paddingLeft="@dimen/padding_5"
        android:text="Do you want to turn on it?"
        android:textAlignment="gravity"
        android:textColor="@android:color/black"
        android:textSize="@dimen/text_size_14"
        android:textStyle="normal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/height_20"
        android:layout_marginRight="@dimen/height_20"
        android:layout_marginTop="@dimen/margin_10"
        android:orientation="horizontal"
        android:padding="10dp"
        android:weightSum="3">

        <com.prts.pickcustomer.customviews.PickCCustomTextVIew
            android:id="@+id/wifiBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_10"
            android:layout_weight="1"
            android:background="@color/appThemeBgColorLight"
            android:gravity="center"
            android:padding="@dimen/margin_10"
            android:text="Wifi"
            android:textColor="@color/appThemeYellow"
            android:textSize="@dimen/text_size_20" />

        <com.prts.pickcustomer.customviews.PickCCustomTextVIew
            android:id="@+id/dataBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_weight="1"
            android:background="@color/appThemeBgColorLight"
            android:gravity="center"
            android:padding="@dimen/margin_10"
            android:text="Data"
            android:layout_marginRight="@dimen/margin_10"
            android:textColor="@color/appThemeYellow"
            android:textSize="@dimen/text_size_20" />

        <com.prts.pickcustomer.customviews.PickCCustomTextVIew
            android:id="@+id/refreshBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_weight="1"
            android:background="@color/appThemeBgColorLight"
            android:gravity="center"
            android:padding="@dimen/margin_10"
            android:text="Refresh"
            android:textColor="@color/appThemeYellow"
            android:textSize="@dimen/text_size_20" />

    </LinearLayout>


</LinearLayout>